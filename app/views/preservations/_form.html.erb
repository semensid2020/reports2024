<div id="form-errors"></div>

<%= form_with model: preservation do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label" style="width: 150px">
      <%= f.label :initial_file_link%>
    </div>
    <div>
      &nbsp;
    </div>
    <div class="col-sm-10">
      <%= f.text_field :initial_file_link, class: 'form-control', style: "width: 300px",
                        required: true, pattern: "https?://.+", title: "URL should start with http:// or https://" %>
    </div>
    <div>
      &nbsp;
    </div>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
