<table class="table table-bordered table-striped mb-0" style="text-align: center">
    <thead>
        <tr>
          <th>ID</th>
          <th>Amount</th>
          <th>Created_at</th>
        </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr id="order_<%= order.id %>">
          <td><%= order.id %></td>
          <td><%= order.amount %></td>
          <td><%= order.created_at %></td>
      <% end %>
    </tbody>
</table>
